{
  "name": "fastest-validator",
  "version": "0.6.15",
  "description": "The fastest JS validator library for NodeJS",
  "main": "dist/index.js",
  "browser": "dist/index.min.js",
  "scripts": {
    "bench": "node benchmark/index.js",
    "build": "rollup -c",
    "prepublish": "npm run build",
    "dev": "nodemon examples/index.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext=.js lib test rollup.config.js",
    "deps": "npm-check -u",
    "coverall": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/icebob/fastest-validator.git"
  },
  "keywords": [
    "validation",
    "validators",
    "validate",
    "schema"
  ],
  "files": [
    "dist",
    "examples",
    "lib",
    "index.js",
    "index.d.ts"
  ],
  "author": "Icebob",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/icebob/fastest-validator/issues"
  },
  "homepage": "https://github.com/icebob/fastest-validator#readme",
  "devDependencies": {
    "benchmarkify": "2.1.1",
    "coveralls": "3.0.2",
    "eslint": "5.13.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "lint-staged": "8.1.3",
    "npm-check": "5.9.0",
    "rollup": "0.67.0",
    "rollup-plugin-buble": "0.19.4",
    "rollup-plugin-closure-compiler-js": "1.0.6",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-uglify-es": "0.0.1"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./lib",
    "roots": [
      "../test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint -- --fix",
      "git add"
    ]
  }
}
